<div class="card text-white bg-info">
  <div class="card-header">
    <%= @article.title %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @article.text %></p>
    </blockquote>
  </div>
</div>

<h2>Comments:</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-secondary btn-md back-button" %>
<%= link_to 'Back', articles_path, :class => "btn btn-primary btn-md back-button" %>