<div class="card">
  <div class="card-header">
    <%= comment.commenter %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= comment.body %></p>
      <%= link_to 'Destroy Comment', [comment.article, comment],
            method: :delete,
            data: { confirm: 'Are you sure?' },
            :class => "btn btn-secondary btn-sm" %>
    </blockquote>
  </div>
</div>
